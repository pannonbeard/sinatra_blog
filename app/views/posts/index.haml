%a{href: '/posts/new', role: 'button' } New Post

%table
  %thead
    %tr 
      %td Title
      %td Content
      %td Actions
  %tbody
  - @posts.each do |post|
    %tr
      %td
        %a{ href: "/posts/#{post.id}" }= post.title
      %td= post.content
      %td
        %a{ href: "/posts/#{post.id}/edit", role: "button" } Edit
        %a{ href: "/posts/#{post.id}", role: "button", "data-method": :delete } Remove

